<h1>Eat-Da-Burger!</h1>

<div class="left-side">
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="notDevoured" value="false">
              <button class="devour" type="submit">Devour it!</button>
            </form>

          </li>
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="right-side">

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">

            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
</div>

<div class="bottoms-up">
    <h2>Add a Burger</h2>
    <form class="create-form" action="/" method="POST">

      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input class="addBurg" type="text" id="bur" name="name">
      </div>

      <button class="addBurg" type="submit">Add Burger</button>
    </form>
</div>
